doctype html

html
  head
    title Sobanko
    link(rel='stylesheet', href='static/css/bundle.css')
  body
    #game-container
      canvas
      #menu
        #undo.button Undo
        #back.button Back
      #boxes
        span#boxes-count
        | #{' '}/#{' '}
        span#destination-count
        | #{' '}boxes
      #moves
        span#moves-count
        | #{' '}moves
      #best
        | Your best:#{' '}
        span#best-count

    #start-screen
      h1 Sobanko
      #levels

    #win-screen
      h1 Good job!
      h4#win-moves
        | You've finished in#{' '}
        span#win-moves-count
        | #{' '}moves
      h5#win-best
        | You've beaten your previous best score!
      #back-to-level-select.button Back

    script(src='static/js/bundle.js')
